{
  "compilerOptions": {
    "jsx": "preserve",

    "allowImportingTsExtensions": true,
    "noEmit": true,

    "module": "preserve",
    "moduleResolution": "bundler",

    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "exclude": ["dist/"],
}
